    <ImageButton
        android:id="@+id/btnThursday"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/backgroundday"
        android:backgroundTint="@color/white"
        android:text="Thursday"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btnTuesday"
        app:layout_constraintStart_toStartOf="@+id/btnTuesday"
        app:layout_constraintTop_toBottomOf="@+id/btnTuesday" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppinssemibold600"
        android:gravity="center"
        android:text="Thursday"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnThursday"
        app:layout_constraintEnd_toEndOf="@+id/btnThursday"
