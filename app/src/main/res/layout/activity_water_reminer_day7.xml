    <ImageButton
        android:id="@+id/btnFriday"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/backgroundday"
        android:backgroundTint="@color/white"
        android:text="Friday"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btnWednesday"
        app:layout_constraintStart_toStartOf="@+id/btnWednesday"
        app:layout_constraintTop_toBottomOf="@+id/btnWednesday" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppinssemibold600"
        android:gravity="center"
        android:text="Friday"
