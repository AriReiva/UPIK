<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFE8"
    tools:context=".ResepPerkedel">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/backPerkedel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/backimage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/bad"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/bibimeyon2bg" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/kaloriTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Bibimeyon (560 kalori)"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ingredientsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Bahan-bahan:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- TextView untuk Daftar Bahan -->

            <!-- TextView untuk Langkah-langkah Pembuatan -->
            <TextView
                android:id="@+id/ingredientsList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1 ikat porsi somen\n2 sdm Gochujang\n1 sdm Gochugaru\n1 sdm kecap asin\n1 sdm cuka/vinegarn\n1 sdm biji wijen\n1 siung bawang putih\n1 butir telur"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/stepsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Langkah-langkah:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- TextView untuk Daftar Langkah -->
            <TextView
                android:id="@+id/stepsList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1.Siapkan bumbu bibimmyeon, tuang gochugaru ke wadah yang akan digunakan untuk mengaduk\n2.Tambahkan gula dan biji wijen\n3.Beri kecap asin dan cuka\n4.Tambahkan gochujang dan parutan bawang putih aduk rata\n5.Rebus mie hingga mendidih dan dirasa lembut, setelah air mendidih siram air dingin untuk menyudahi proses masak\n6.Tiriskan mie lalu bilas dengan air mengalir, untuk menghilangkan gluten yg tersisa\n7.Masukan mie kedalm bumbu aduk hingga rata\n8.Sajikan dengan irisan timu, selada dan soft boild egg\n\n"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>