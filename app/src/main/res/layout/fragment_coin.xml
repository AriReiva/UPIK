<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentCoin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"> <!-- Center horizontally -->

        <!-- Coin and Points Section -->
        <LinearLayout
            android:id="@+id/coinPointsSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/trainbgday"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_horizontal"> <!-- Center the content horizontally -->

            <ImageView
                android:id="@+id/coinIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/vector_upk_koin" />

            <TextView
                android:id="@+id/pointText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppinssemibold600"
                android:paddingStart="8dp"
                android:text="1.250 UP"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Title Text 'You Can Get This!' -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppinssemibold600"
            android:text="You Can Get This!"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" /> <!-- Center the text -->

        <!-- Item Image with Price -->
        <LinearLayout
            android:id="@+id/itemSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal"> <!-- Center the content horizontally -->

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/merchinebgitem"
                android:src="@drawable/baju" />

            <TextView
                android:id="@+id/itemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:paddingTop="8dp"
                android:text="1250 UP"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 'Get Our Merch!' Title -->
        <TextView
            android:id="@+id/merchTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Get Our Merch!"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" /> <!-- Center the text -->

        <!-- Merchandise Grid -->
        <GridLayout
            android:id="@+id/merchGrid"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/merchinebgitem"
            android:columnCount="2"
            android:gravity="center_horizontal"> <!-- Center the grid items -->

            <!-- Item 1 (Umbrella) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/itemUmbrella"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/payung" />

                <TextView
                    android:id="@+id/umbrellaPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="1000 UP"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Item 2 (Dumbbell) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/itemDumbbell"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/barbeico" />

                <TextView
                    android:id="@+id/dumbbellPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="1500 UP"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Item 3 (Smartwatch) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/itemSmartwatch"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/jam" />

                <TextView
                    android:id="@+id/smartwatchPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="2500 UP"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Item 4 (Bottle) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/itemBottle"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/tumbler" />

                <TextView
                    android:id="@+id/bottlePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="5000 UP"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>
        </GridLayout>
    </LinearLayout>

</FrameLayout>